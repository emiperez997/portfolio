<nav
  class="z-30 fixed w-full flex flex-wrap items-center justify-center mx-auto p-4 bg-gray-800"
>
  <div class="w-full lg:w-[1120px] flex flex-wrap justify-between items-center">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap text-white"
        >Emiliano Perez</span
      >
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden focus:outline-none focus:ring-2 text-gray-400 hover:bg-gray-700 focus:ring-gray-600"
      aria-controls="navbar-default"
      aria-expanded="false"
      id="burger"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="gap-2 font-medium flex flex-col p-4 md:p-0 mt-4 border rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 bg-gray-700 md:bg-transparent border-gray-700"
      >
        <li>
          <a
            class="menu-link"
            href="#"
            class="block py-2 px-3 bg-orange-400 rounded md:bg-transparent md:p-0 text-white md:text-orange-400"
            aria-current="page">Inicio</a
          >
        </li>

        <li>
          <a
            class="menu-link"
            href="#proyectos"
            class="block py-2 px-3 rounded md:border-0 md:p-0 text-white md:hover:text-orange-500 hover:bg-orange-500 hover:text-white md:hover:bg-transparent"
          >
            Proyectos
          </a>
        </li>
        <li>
          <a
            class="menu-link"
            href="#tecnologias"
            class="block py-2 px-3 rounded md:border-0 md:p-0 text-white md:hover:text-orange-500 hover:bg-orange-500 hover:text-white md:hover:bg-transparent"
          >
            Tecnologías
          </a>
        </li>
        <li>
          <a
            class="menu-link"
            href="#sobre-mi"
            class="block py-2 px-3 rounded md:border-0 md:p-0 text-white md:hover:text-orange-500 hover:bg-orange-500 hover:text-white md:hover:bg-transparent"
          >
            Sobre mí
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const menuLinks = document.querySelectorAll(".menu-link");

  function changeColor(
    menuLinks: NodeListOf<Element>,
    event?: HashChangeEvent
  ) {
    menuLinks.forEach((link) => {
      if (event) {
        if (link.getAttribute("href") === event.newURL.split("/")[3]) {
          link.classList.add("text-orange-500");
        } else {
          link.classList.remove("text-orange-500");
        }
      } else {
        if (link.getAttribute("href") === window.location.href.split("/")[3]) {
          link.classList.add("text-orange-500");
        } else {
          link.classList.remove("text-orange-500");
        }
      }
    });
  }

  window.onhashchange = (event: HashChangeEvent) => {
    changeColor(menuLinks, event);
  };

  changeColor(menuLinks);
</script>
