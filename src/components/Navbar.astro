<nav
  class="z-30 fixed w-full flex flex-wrap items-center justify-center mx-auto p-4 bg-gray-800"
>
  <div class="w-full lg:w-[1120px] flex flex-wrap justify-between items-center">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap text-white"
        >Emiliano Perez</span
      >
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden focus:outline-none focus:ring-2 text-gray-400 hover:bg-gray-700 focus:ring-gray-600"
      aria-controls="navbar-default"
      aria-expanded="false"
      id="burger"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="gap-2 font-medium flex flex-col p-4 md:p-0 mt-4 border rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 bg-gray-700 md:bg-transparent border-gray-700"
      >
        <li>
          <a
            href="#"
            class="menu-link block py-2 px-3 rounded md:bg-transparent md:p-0 text-white"
            aria-current="page"
            aria-label="inicio"
          >
            Inicio
          </a>
        </li>

        <li>
          <a
            href="#proyectos"
            class="menu-link block py-2 px-3 rounded md:border-0 md:p-0 text-white md:hover:text-orange-500 hover:bg-orange-500 hover:text-white md:bg-transparent"
            aria-label="proyectos"
          >
            Proyectos
          </a>
        </li>
        <li>
          <a
            href="#tecnologias"
            class="menu-link block py-2 px-3 rounded md:border-0 md:p-0 text-white md:hover:text-orange-500 hover:bg-orange-500 hover:text-white md:bg-transparent"
            aria-label="tecnologias"
          >
            Tecnologías
          </a>
        </li>
        <li>
          <a
            href="#sobre-mi"
            class="menu-link block py-2 px-3 rounded md:border-0 md:p-0 text-white md:hover:text-orange-500 hover:bg-orange-500 hover:text-white md:bg-transparent"
            aria-label="sobre-mi"
          >
            Sobre mí
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("astro:page-load", () => {
    const sections = document.querySelectorAll("section");
    const navItems = document.querySelectorAll(".menu-link");

    const callback = (entries: any[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("md:text-orange-500");

              item.classList.add("bg-orange-400");
            } else {
              item.classList.remove("md:text-orange-500");
              item.classList.remove("bg-orange-400");
            }
          });
        }
      });
    };

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    });

    sections.forEach((section) => {
      observer.observe(section);
    });

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect();
      } else {
        sections.forEach((section) => {
          observer.observe(section);
        });
      }
    };
  });
</script>
