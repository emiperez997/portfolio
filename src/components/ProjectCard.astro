---
interface Props {
  title: string;
  description: string;
  link: string;
  date: number;
  technologies: string[];
}

const { title, description, link, date, technologies } = Astro.props;
---

<div class="w-full p-6 border rounded-lg shadow bg-gray-800 border-gray-700">
  <h5 class="mb-2 text-2xl font-semibold tracking-tight text-white">
    {title}
  </h5>

  <p class="mb-3 font-normal text-gray-400">{description}</p>

  <hr class="w-full border-gray-600" />

  <p class="my-3 font-normal text-gray-400">
    <b>Tecnolog√≠as:</b>
    {technologies.join(", ")}
  </p>

  <span
    class="text-sm font-medium me-2 px-2.5 py-0.5 rounded bg-blue-900 text-blue-300"
  >
    {date}
  </span>
  <div class="flex mt-5">
    <a
      href={link}
      class="hover:bg-gray-700 text-sm font-medium me-2 px-2.5 py-0.5 rounded bg-gray-600 text-gray-300 cursor-pointer flex items-center gap-2"
      target="_blank"
    >
      <img src="/icons/github.svg" alt="" width="20" height="20" />
      Github
    </a>

    <a
      href={link}
      class="hover:bg-blue-700 text-sm font-medium me-2 px-2.5 py-0.5 rounded bg-blue-600 text-gray-300 cursor-pointer flex items-center gap-2"
      target="_blank"
    >
      <img src="/favicon.svg" alt="" width="20" height="20" />
      Demo
    </a>
  </div>
</div>
