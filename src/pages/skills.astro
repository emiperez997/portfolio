---
import Title from "../components/Title.astro";
import Layout from "../layouts/Layout.astro";

import data from "../data/data.json";
---

<Layout title="Emiliano Perez - Habilidades">
  <Title>
    <span slot="title">Habilidades</span>
  </Title>

  <article
    class="w-80 sm:w-[550px] flex flex-col sm:flex-row gap-5 sm:justify-around justify-center items-center"
  >
    <div class="flex flex-col gap-5">
      <div class="flex flex-col justify-center items-center gap-2">
        <h4 class="font-bold text-xl text-center">Desarrollo Frontend</h4>
        <div class="flex gap-5">
          {
            data.skills.technicalls.frontend.map((skill, index) => (
              <img class="w-10 h-10" src={`${skill}.svg`} alt="" />
            ))
          }
        </div>
      </div>

      <div class="flex flex-col justify-center items-center gap-2">
        <h4 class="font-bold text-xl text-center">Desarrollo Backend</h4>
        <div class="grid gap-5 grid-cols-3">
          {
            data.skills.technicalls.backend.map((skill, index) => (
              <img class="w-10 h-10" src={`${skill}.svg`} alt="" />
            ))
          }
        </div>
      </div>

      <div class="flex flex-col justify-center items-center gap-2">
        <h4 class="font-bold text-xl text-center">Otras habilidades</h4>
        <div class="gap-5 flex">
          {
            data.skills.technicalls.others.map((skill, index) => (
              <img class="w-10 h-10" src={`${skill}.svg`} alt="" />
            ))
          }
        </div>
      </div>
    </div>

    <div class="flex flex-col justify-center items-center text-center">
      <h3 class="text-xl font-bold text-center">Habilidades Blandas</h3>
      <ul>
        {
          data.skills.soft.map((skill, index) => (
            <li class="font-thin">{skill}</li>
          ))
        }
      </ul>
    </div>
  </article>
</Layout>
